{
    "parser": "babel-eslint",
    "plugins": [
	"babel",
        "react"
    ],
    "rules": {
	"babel/object-shorthand": 1,
	"strict": 1,
        // eventually enable this rule; disabling is useful for debugging
        "no-console": 0
    },
    "warnFileIgnored": true,
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        },
        "ecmaVersion": 6
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "env": {
        "browser": true,
        "es6": true
    }
}
